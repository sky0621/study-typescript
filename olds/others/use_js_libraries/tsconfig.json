{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6", "dom"
        ],
        "mapRoot": "/",
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    }
}